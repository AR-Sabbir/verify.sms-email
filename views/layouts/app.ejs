
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Verification</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.css"/>
    <link rel="stylesheet" href="/css/style.css">
   
    
</head>
<body>
    

    



    <%- body %> 

   



    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $('.data-table').DataTable()

        // =========== preview image =============>
        

            const studentImage = document.querySelector('#student-photo-id')

            const ImagePreview = document.querySelector('.preloaded')

            if(studentImage){

                studentImage.onchange = (e) => {

                    const   imgLink = URL.createObjectURL(e.target.files[0])

                    ImagePreview.setAttribute('src',imgLink)
                }

            }

        const delete_btn = document.querySelectorAll('.delete-btn')

        if (delete_btn){

            delete_btn.forEach( item => {

                item.onclick = ( e ) => {
                    
                    const conf = confirm( 'Are you sure?');

                    if( conf ){
                        return true
                
                    }else{
                        return false
                    }
                }
            })
            
        }

    </script>

    
</body>
</html>