


<div class="container my-5 student-table">

    <div class="row justify-content-center">
        <div class="col-md-10">
            <a href="/student/create" class="btn btn-sm btn-primary">Add New Student</a>
            <a href="/student/unverified" class="btn btn-sm btn-danger">Unverify Student</a>
            <br>
            <br>
        <div class="card shadow-sm">

            <div class="card-header">
                <h2 class="text-center">All Student Data</h2>
            </div>

          
        </div>
        </div>
        <% students.forEach((studens,index )=> { %>
        <div class="col-md-4 my-3">
            <div class="card">
                <div class="card-body">
                    <div class="user-info">

                        <% if (studens.photo =='avater.png') { %>
                            <img src="/images/<%= studens.photo %>" alt="">
                            <% } else { %>
                               <img src="/images/student-image/<%= studens.photo %>" alt="">
                           <% } %>

                        <h1><%= studens.name %></h1>
                        <p><%= studens.cell %></p>

                        <hr>
                        <a href="/student/view/<%= studens.id %> " class="btn btn-info"><i class="fas fa-eye"></i></a>
                        <a href="/student/edit/<%= studens.id %> " class="btn btn-warning"><i class="fas fa-edit"></i></a>
                        <a href="/student/delete/<%= studens.id %> " class="btn btn-danger delete-btn"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</div>