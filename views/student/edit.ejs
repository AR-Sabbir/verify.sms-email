
<div class="container my-5 student-form">

    <div class="row justify-content-center">
        <div class="col-md-5">
            <a href="/student" class="btn btn-sm btn-primary">Back</a>
            <br>
            <br>
        <div class="card shadow-sm">
            <div class="card-header">
                <h2 class="text-center">Update<%= editStudent.name %> Data</h2>
            </div>

            <div class="card-body">

               
                <form action="/student/update/<%= editStudent.id %>" method="POST" enctype="multipart/form-data">

                    <div class="my-3">
                        <label for="">Name</label>
                        <input value="<%= editStudent.name %> " type="text" name="name">
                    </div>
                    <div class="my-3">
                        <label for="">Email</label>
                        <input type="text" value="<%= editStudent.email %> " name="email">
                    </div>
                    <div class="my-3">
                        <label for="">Cell</label>
                        <input type="text" value="<%= editStudent.cell %> " name="cell">
                    </div>
                    
                    <div class="my-3">
                        <label for="">Location</label>
                        <select name="location" id="">
                            <option value="">-Select-</option>
                            <option <% if (editStudent.lacation == 'Chapai Nawabganj') { %>selected<% } %> value="Chapai Nawabganj">Chapai Nawabganj</option>
                            <option <% if (editStudent.location == 'Rajshahi' ) { %> selected<% } %> value="Rajshahi">Rajshahi</option>
                            <option <% if (editStudent.lacation == 'Dhaka') { %>selected<% } %>  value="Dhaka">Dhaka</option>
                            <option <% if (editStudent.lacation == 'Khulna') { %>selected<% } %> value="Khulna">Khulna</option>
                            <option <% if (editStudent.lacation == 'Syhlet') { %>selected<% } %> value="Syhlet">Syhlet</option>
                        </select>
                        
                    </div>
                    <div class="my-3">
                        <label for="">Photo</label>
                        <input name="student-photo" type="file" name="Photo">
                    </div>
                    <div class="my-3">
                        <input class="btn btn-primary w-100" type="Submit" value="Create">
                    </div>
                    
                </form>

            </div>
        </div>
        </div>
    </div>
</div>