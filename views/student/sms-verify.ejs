

<section class="my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <a class="btn btn-primary" href="/student">Back to Home</a>
                    <br>
                    <div class="card-body">
                        <h4 class="text-center"> Hello
                            <%= name %> Please Verify Your Identity</h4>
                        <hr>
                        <p class="text-center  text-uppercase">OTP CODE Sent . Please Verify Your Phone Number </p>

                        <form action="/student/sms-verify/<%= id %> " method="post">
                            <div class="my-3">
                                <label class="form-label" for="OTP">OTP</label>
                                
                                <input type="text" name="OTP" id="OTP" class="form-control" placeholder="1234">
                            </div>
                            <div class="my-3">
                                <input class="btn btn-primary w-100" type="submit" value="SUBMIT">
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>

    </div>

</section>